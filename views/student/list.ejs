<%- include('../includes/head.ejs') %>
    <div class="row my-4 align-items-center">
        <div class="col">
            <h1 class="my-0">List</h1>
        </div>
        <div class="col text-right">
            <a href="/students/new" class="btn btn-dark px-4">Add New</a>
        </div>
    </div>
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Semester</th>
                <th scope="col">GPA</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let student of students) { %>
                <tr>
                    <th scope="row"><%= student.id %></th>
                    <td><%= student.name %></td>
                    <td><%= student.semester %></td>
                    <% if(student.gpa){ %>
                        <td><%= student.gpa.toFixed(2) %></td>
    
                        <% } else{ %>  
                            <td><%= '-' %></td>
                        <% } %>
                    <td>
                        <div class="dropdown">
                            <button class="dropdown border-0 bg-transparent" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <%- include('../includes/menu.ejs') %>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/students/<%= student.id %>/register">Register Courses</a>
                                <a class="dropdown-item" href="/students/<%= student.id %>/addMarks">Add Marks</a>
                                <a class="dropdown-item" href="/students/<%= student.id %>/report">View Report</a>
                                <a class="dropdown-item" href="/students/<%= student.id %>/remove">Remove Student</a>

                            </div>
                        </div>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
<%- include('../includes/end.ejs') %>